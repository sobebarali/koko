{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "bun run --hot src/index.ts",
		"start": "bun run dist/index.js"
	},
	"dependencies": {
		"hono": "catalog:",
		"@trpc/server": "catalog:",
		"@hono/trpc-server": "^0.4.0",
		"better-auth": "catalog:",
		"dotenv": "catalog:",
		"zod": "^4.1.11",
		"@koko/api": "workspace:*",
		"@koko/auth": "workspace:*",
		"@koko/db": "workspace:*"
	},
	"devDependencies": {
		"typescript": "^5.8.2",
		"@types/bun": "^1.2.6",
		"tsdown": "^0.16.5",
		"@koko/config": "workspace:*"
	}
}
