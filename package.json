{
	"name": "koko",
	"private": true,
	"type": "module",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"check": "biome check --write .",
		"prepare": "husky",
		"ruler:apply": "npx @intellectronica/ruler@latest apply --local-only",
		"dev": "turbo dev",
		"build": "turbo build",
		"build:prod": "turbo build --filter=!docs",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"dev:docs": "turbo -F docs dev",
		"test": "turbo run test --filter=@koko/api",
		"test:watch": "turbo run test --filter=@koko/api -- --watch",
		"db:push": "turbo -F @koko/db db:push",
		"db:studio": "turbo -F @koko/db db:studio",
		"db:generate": "turbo -F @koko/db db:generate",
		"db:migrate": "turbo -F @koko/db db:migrate"
	},
	"dependencies": {
		"dotenv": "^17.2.2",
		"drizzle-orm": "^0.44.2",
		"resend": "^6.5.2",
		"zod": "^4.1.11"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.0",
		"@cloudflare/workers-types": "^4.20250822.0",
		"@types/node": "^22.10.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"turbo": "^2.5.4",
		"vitest": "^4.0.13"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"packageManager": "npm@10.9.0"
}
