{
	"name": "koko",
	"private": true,
	"type": "module",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"hono": "^4.8.2",
			"@trpc/server": "^11.5.0",
			"better-auth": "^1.4.0",
			"dotenv": "^17.2.2",
			"@trpc/client": "^11.5.0",
			"@libsql/client": "^0.14.0",
			"libsql": "^0.5.22",
			"@polar-sh/better-auth": "^1.1.3",
			"drizzle-orm": "^0.44.2"
		}
	},
	"scripts": {
		"check": "biome check --write .",
		"prepare": "husky",
		"ruler:apply": "bunx @intellectronica/ruler@latest apply --local-only",
		"dev": "turbo dev",
		"build": "turbo build",
		"build:prod": "turbo build --filter=!docs",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"dev:docs": "turbo -F docs dev",
		"db:push": "turbo -F @koko/db db:push",
		"db:studio": "turbo -F @koko/db db:studio",
		"db:generate": "turbo -F @koko/db db:generate",
		"db:migrate": "turbo -F @koko/db db:migrate"
	},
	"dependencies": {
		"dotenv": "^17.2.2",
		"zod": "^4.1.11"
	},
	"devDependencies": {
		"turbo": "^2.5.4",
		"@biomejs/biome": "^2.2.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"@types/bun": "^1.2.6",
		"@cloudflare/workers-types": "^4.20250822.0"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"packageManager": "bun@1.3.3"
}
